{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": ["error", 4, {"SwitchCase": 1}],
        // allow jsx in .js files
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
    },
    "extends": "airbnb"
}
